<h1>Sign Up</h1>

<div class="newuser_form">
  <%= form_for @user do |f| %>

    <div class="newuser_email">
    <%= f.label :email %>
    <%= f.text_field :email %>
    </div>

    <div class="newuser_password">
    <%= f.label :password %>
    <%= f.text_field :password %>
    </div>

    <div class="newuser_password_confirm">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>
    </div>

    <div class="newuser_submit">
    <%= f.submit "Sign Up" %>
    </div>

  <% end %>
</div>
