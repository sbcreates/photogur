<!DOCTYPE html>
<html>
<head>
  <title>Photogur</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <ul class="nav">
      <% if session[:user_id] && User.find(session[:user_id]) %>
      <li><%= link_to "Home", root_url %></li>
      <li><%= link_to "Log Out", sessions_path, method: :delete %></li>

      <% else %>
      <li><%= link_to "Home", root_url %></li>
      <li><%= link_to "Sign Up", new_users_path %></li>
      <li><%= link_to "Log In", new_sessions_path %></li>
      <% end %>
    </ul>
  </nav>

  <main>
    <%= yield %>
  </main>

  <footer>
  </footer>

</body>
</html>
